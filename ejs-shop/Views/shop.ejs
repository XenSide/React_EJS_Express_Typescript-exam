<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
        <title>Shop</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
            crossorigin="anonymous"
        />
        <!-- <link rel="icon" type="image/x-icon" href="/images/favicon.ico"> -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat" />
        <link rel="stylesheet" href="/assets/css/styleprodotto.css?v1.0.0" />
        <link rel="stylesheet" href="/assets/css/mediaqueries.css?v2.1.4" />
    </head>

    <body>
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark" data-bs-theme="dark">
            <div class="container-fluid padded">
                <a class="navbar-brand" href="/shop">Shop</a>
                <form class="d-flex">
                    <div class="nome"><%= nome %></div>
                    <a href="/logout">
                        <button class="btn btn-outline-danger" type="button">Logout</button>
                    </a>
                </form>
            </div>
        </nav>
        <div class="container no-t-pad mb-5">
            <div class="flex-row row justify-content-center">
                <script>
                    var maxheigth = 0;
                </script>
                <% products.forEach(function(product, index) { %>
                <div class="col-12 col-sm-6 col-md-6 col-lg-3 col-xl-4 gy-5">
                    <div class="productCard" id="productCard<%= index %>">
                        <img
                            src="<%= product.smallimgpath%>?<%= performance.now() %>"
                            alt="Immagine prodotto"
                            height="333"
                            width="414"
                        />
                        <a href="/shop/<%= product.id %>">
                            <h1>
                                <% if(product.name.length > 25) { %> <%= product.name.substring(0,23) + "..."
                                %> <% } else { %> <%= product.name %> <% } %>
                            </h1>
                        </a>
                        <p class="description">
                            <% if(product.description.length > 201) { %> <%=
                            product.description.substring(0,204) + "..." %> <% } else { %> <%=
                            product.description %> <% } %>
                        </p>
                        <div class="purchaseInfo mt-auto pb-2">
                            <div class="price"><%= product.price%></div>
                            <a href="/shop/<%= product.id %>">
                                <button class="btn custombutton float-right detailButton" type="button">
                                    Dettagli
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </body>
</html>
